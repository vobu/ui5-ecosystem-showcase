{
    "name": "ui5-app",
    "version": "0.10.1",
    "description": "UI5 application using custom middlewares and tasks",
    "private": true,
    "author": "Volker Buzek, Peter Muessig",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/petermuessig/ui5-ecosystem-showcase.git"
    },
    "scripts": {
        "clean": "rimraf dist",
        "prepare": "mkdirp dist",
        "build": "ui5 build self-contained --clean-dest",
        "build:pwa": "ui5 build self-contained --clean-dest --config ui5-pwa.yaml --verbose",
        "start": "ui5 serve --config ui5-dist.yaml --port 1081 --open index.html",
        "start:ci": "ui5 serve --config ui5-min.yaml --port 1081",
        "dev": "ui5 serve --port 1081 --open index.html",
        "debug": "node --inspect node_modules/.bin/ui5 serve --port 1081",
        "test": "karma start",
        "watch:build": "npm-watch build",
        "watch": "npm-run-all prepare build --parallel watch:build start"
    },
    "watch": {
        "build": {
            "patterns": [
                "webapp"
            ],
            "extensions": "html,js,json,xml,properties",
            "quiet": false
        }
    },
    "devDependencies": {
        "@sapui5/ts-types": "^1.82.0",
        "@ui5/cli": "^2.6.4",
        "@ui5/uiveri5": "^1.45.1",
        "@wdio/cli": "^6.8.1",
        "@wdio/local-runner": "^6.8.1",
        "@wdio/mocha-framework": "^6.8.0",
        "@wdio/spec-reporter": "^6.8.1",
        "@wdio/sync": "^6.8.0",
        "babel-plugin-transform-async-to-promises": "^0.8.15",
        "chromedriver": "^87.0.4",
        "karma": "^5.2.3",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage": "^2.0.3",
        "karma-ui5": "^2.3.1",
        "mkdirp": "~1.0.4",
        "npm-run-all": "^4.1.5",
        "npm-watch": "^0.7.0",
        "rimraf": "~3.0.2",
        "ui5-middleware-cfdestination": "^0.3.1",
        "ui5-middleware-iasync": "^0.1.0-alpha.2",
        "ui5-middleware-index": "^0.2.2",
        "ui5-middleware-livereload": "^0.5.1",
        "ui5-middleware-livetranspile": "^0.3.0",
        "ui5-middleware-servestatic": "^0.3.3",
        "ui5-middleware-simpleproxy": "^0.7.0",
        "ui5-middleware-stringreplacer": "^0.2.1",
        "ui5-middleware-webjars": "^0.3.0",
        "ui5-task-i18ncheck": "^0.3.3",
        "ui5-task-pwa-enabler": "^0.2.2",
        "ui5-task-stringreplacer": "^0.5.1",
        "ui5-task-transpile": "^0.3.0",
        "ui5-task-zipper": "^0.4.2",
        "wdio-chromedriver-service": "^6.0.4",
        "wdio-ui5-service": "^0.1.9"
    },
    "dependencies": {
        "ui5-cc-md": "0.0.1"
    },
    "ui5": {
        "dependencies": [
            "ui5-middleware-cfdestination",
            "ui5-middleware-livereload",
            "ui5-middleware-iasync",
            "ui5-middleware-index",
            "ui5-middleware-livetranspile",
            "ui5-middleware-simpleproxy",
            "ui5-middleware-servestatic",
            "ui5-middleware-stringreplacer",
            "ui5-middleware-webjars",
            "ui5-task-i18ncheck",
            "ui5-task-pwa-enabler",
            "ui5-task-stringreplacer",
            "ui5-task-transpile",
            "ui5-task-zipper",
            "ui5-cc-md"
        ]
    }
}
