<mvc:View controllerName="test.Sample.controller.Main"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:cc="ui5.cc.md">

	<Page id="page"
		title="{i18n>appTitle}">
		<headerContent>
			<core:Icon color="#1873B4"
				src="sap-icon://sap-ui5"
				size="2rem" />
			<Text text="{LatestUI5>/latest} ({LatestUI5>/type})" />
		</headerContent>
		<content>
			<VBox alignItems="Center"
				justifyContent="Center"
				height="100%">
				<Title level="H1"
					titleStyle="H1"
					text="{i18n>startPage.title.text}"
					width="100%"
					textAlign="Center" />
				<cc:md content="***markdown is nice!***&#13;&#10;&#13;&#10;if only there wasn't the CR problem..." />
				<cc:md fromFile="view/MainFragment.md" />
			</VBox>
		</content>
	</Page>

</mvc:View>
